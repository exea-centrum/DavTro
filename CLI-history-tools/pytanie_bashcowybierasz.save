!/bin/bash

echo -n "Czy jest wieczor? Odpowiedz tak lub nie: "
read odp
if [ "$odp" = "tak" ]
then echo "Dobry wieczor"
elif [ "$odp" = "nie" ]
then echo "Dzien dobry"
else
  echo "Nie rozpoznana odpowiedz: $odp"
  exit 1
fi
exit 0

